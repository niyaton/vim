" color settings
if &term == "screen-256color"
  silent! colorscheme molokai
  hi Comment ctermfg=102
  hi Visual  ctermbg=236
else
  silent! colorscheme wombat
endif

if exists("g:colors_name") && g:colors_name ==? 'wombat'
  hi Visual gui=none guifg=khaki guibg=olivedrab	" from sesert
endif

" ターミナルタイプによるカラー設定
if &term =~ "xterm-256color" || "screen-256color"
  " 256色
  set t_Co=256
  set t_Sf=[3%dm
  set t_Sb=[4%dm
elseif &term =~ "xterm-debian" || &term =~ "xterm-xfree86"
  set t_Co=16
  set t_Sf=[3%dm
  set t_Sb=[4%dm
elseif &term =~ "xterm-color"
  set t_Co=8
  set t_Sf=[3%dm
  set t_Sb=[4%dm
endif

syntax enable " turn on syntax hilighting
